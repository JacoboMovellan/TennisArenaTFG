<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.tennisarena.ControllerTenis">
    <padding>
        <Insets bottom="40.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Título centrado -->
    <Label text="Bienvenidos a TennisArena" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Contenedor para los botones centrados -->
    <VBox alignment="CENTER" spacing="20.0">
        <Button text="Iniciar sesión" onAction="#onIniciarSesionButtonClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                onMousePressed="#handleMousePress" onMouseReleased="#handleMouseRelease" />
        <Button text="Registrarse" onAction="#onRegistrarseButtonClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                onMousePressed="#handleMousePress" onMouseReleased="#handleMouseRelease" />
    </VBox>

    <!-- StackPane para centrar los formularios -->
    <StackPane alignment="CENTER" prefWidth="400.0" prefHeight="250.0"> <!-- Cambié la altura aquí -->
        <!-- Formulario de Login (invisible por defecto) -->
        <AnchorPane fx:id="loginPane" visible="false" prefWidth="400.0" prefHeight="250.0"> <!-- Cambié la altura aquí también -->
            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Iniciar Sesión"/>
                <TextField fx:id="emailField" promptText="Correo Electrónico"/>
                <PasswordField fx:id="passwordField" promptText="Contraseña"/>
                <Button text="Iniciar sesión" onAction="#onLogin" />
            </VBox>
        </AnchorPane>

        <!-- Formulario de Registro (invisible por defecto) -->
        <AnchorPane fx:id="registerPane" visible="false" prefWidth="400.0" prefHeight="250.0"> <!-- Cambié la altura aquí también -->
            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Registrarse"/>
                <TextField fx:id="registerEmailField" promptText="Correo Electrónico"/>
                <PasswordField fx:id="registerPasswordField" promptText="Contraseña"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Confirmar Contraseña"/>
                <Button text="Registrarse" onAction="#onRegister" />
            </VBox>
        </AnchorPane>
    </StackPane>
</VBox>
